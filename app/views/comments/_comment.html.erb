<div id="<%= dom_id comment %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Body:</strong>
    <%= comment.body %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">User:</strong>
    <%= comment.user_username %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Created at:</strong>
    <%= comment.created_at %>
  </p>

</div>
