<div class="flex flex-col w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col lg:flex-row gap-3 lg:gap-6">
    <div class="flex flex-col w-full gap-3 lg:max-w-xs">
      <%= link_to "← Back to projects", projects_path, class: "underline text-xs" %>
      <%= render @project %>
      <ul class="flex flex-row items-center gap-3">
        <li>
          <%= link_to "Edit", edit_project_path(@project), class: "underline text-sm" %>
        </li>
        <span class="text-xs text-gray-300">|</span>
        <li>
          <%= link_to "Destroy", @project, method: :delete, class: "underline text-sm", data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
        </li>
      </ul>
      <hr class="my-3">
      <%= turbo_frame_tag "project_users", src: project_users_path(@project) %>
    </div>
    <div class="w-full">
      <%= turbo_frame_tag "history", src: project_history_index_path(@project) %>
    </div>
  </div>

  <div class="inline-block ml-2">
  </div>
</div>
