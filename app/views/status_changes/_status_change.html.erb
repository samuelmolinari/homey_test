<div id="<%= dom_id status_change %>" class="flex flex-row justify-between w-full">
  <div class="relative flex items-center justify-center flex-none w-6 h-6 bg-white">
    <div class="h-1.5 w-1.5 rounded-full bg-gray-100 ring-1 ring-gray-300"></div>
  </div>
  <p class="flex-auto py-0.5 text-xs/5 text-gray-500">
    <span class="font-medium text-gray-900"><%= status_change.user_username %></span>
    changed status
    <% if status_change.from_status %>
      from
      <span class="font-medium text-amber-600"><%= status_change.from_status %></span>
    <% end %>
    to <span class="font-medium text-green-600"><%= status_change.to_status %></span>
  </p>
  <%= time_tag status_change.created_at, time_ago_in_words(status_change.created_at), class: "flex-none py-0.5 text-xs/5 text-gray-500" %>
</div>
